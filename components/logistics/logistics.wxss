.logistics {
  padding: 0 26rpx;
  background-color: #fff;
}
.box{
  height: 138rpx;
  padding: 26rpx 0;
  display: flex;
  border-bottom: 1rpx solid #eee;
}
.logistics-icon {
  width: 72rpx;
  height: 72rpx;
  padding-top: 10rpx;
}
.logistics-icon-img {
  width: 72rpx;
  height: 72rpx;
}

.logistics-content {
  flex: 1;
  padding: 0 46rpx 0 26rpx;
}
.logistics-content-message {
  color: #F44F28;
  font-size: 28rpx;
}
.logistics-content-date {
  margin-top: 16rpx;
  color: #999;
  font-size: 24rpx;
}

.logistics-link {
  width: 30rpx;
  height: 40rpx;
}